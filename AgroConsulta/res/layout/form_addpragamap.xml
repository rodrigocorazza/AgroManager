<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:textSize="15dp"
        android:text="Selecione o nome da praga encontrada: " />

    <Spinner
        android:id="@+id/spnAddPraga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1" />

    <Button
        android:id="@+id/btnSalvarPraga"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="48dp"
        android:text="Registrar Praga" />

    <Button
        android:id="@+id/btnCancelarPraga"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSalvarPraga"
        android:layout_alignBottom="@+id/btnSalvarPraga"
        android:layout_alignParentLeft="true"
        android:text="Cancelar" />

</RelativeLayout>
